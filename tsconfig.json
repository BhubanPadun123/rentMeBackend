{
  "compilerOptions": {
    /* Language and module options */
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Paths & Base Resolution */
    "baseUrl": "./src",
    "paths": {
      "config/*": ["config/*"]
    },

    /* Type checking */
    "strict": true,
    "skipLibCheck": true,

    /* Output settings */
    "outDir": "./dist",
    "rootDir": ".", // âœ… rootDir should be the *common root* of all included files
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "index.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
