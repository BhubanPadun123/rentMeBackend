{
  "compilerOptions": {
    /* Language and module options */
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Paths & Base Resolution */
    "baseUrl": "./src",
    "paths": {
      "config/*": [
        "config/*"
      ]
    },
    /* Type checking */
    "strict": true,
    "skipLibCheck": true,
    /* Output settings */
    "outDir": "./dist", // ✅ Add output directory
    "rootDir": "./src", // ✅ Define source root (recommended)
    "resolveJsonModule": true, // ✅ Optional: Allow importing .json files
    "allowJs": true // ✅ Optional: Allow mixing JS with TS if needed
  },
  "include": [
    "src"
  ], // ✅ Only include source files
  "exclude": [
    "node_modules",
    "dist"
  ] // ✅ Ignore build output and dependencies
}